  /**
   * Tests binary unsure mode.
   */
  function _testUnsureBinary() {
    $this->drupalLogin($this->admin_user);
    $this->setProtectionUI('akismet_test_form', AKISMET_MODE_ANALYSIS, NULL, array(
      'akismet[unsure]' => 'binary',
    ));
    $this->drupalLogout();

    // Verify that an unsure post is ham.
    // Note: The actual binary mode of Akismet's production API is more granular.
    $edit = array(
      'title' => $this->randomString(),
      'body' => 'unsure',
    );
    $this->assertHamSubmit('akismet-test/form', array(), $edit, 'Submit');
    $mid = $this->assertTestSubmitData();
    $data = $this->assertAkismetData('akismet_test', $mid);
    $record = akismet_test_load($mid);
    $this->assertEqual($record->status, 1, t('Published test post found.'));
    $this->assertSame('spam_score', $data->spam_score, 0);
    $this->assertSame('spam_classification', $data->spam_classification, 'ham');
    $this->assertSame('moderate', $data->moderate, 0);

    // Verify that a ham post is accepted.
    $edit = array(
      'title' => $this->randomString(),
      'body' => 'ham',
    );
    $this->assertHamSubmit('akismet-test/form', array(), $edit, 'Submit');
    $mid = $this->assertTestSubmitData();
    $data = $this->assertAkismetData('akismet_test', $mid);
    $record = akismet_test_load($mid);
    $this->assertEqual($record->status, 1, t('Published test post found.'));
    $this->assertSame('spam_score', $data->spam_score, 0);
    $this->assertSame('spam_classification', $data->spam_classification, 'ham');
    $this->assertSame('moderate', $data->moderate, 0);

